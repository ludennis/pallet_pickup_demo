<root main_tree_to_execute = "AFL_BT" >
  <BehaviorTree ID="AFL_BT">
    <Sequence name="DropoffPallet">
      <WaitForAprilTagDetection
        name="WaitForAprilTag"
        AprilTagTfName="Dropoff"
        MapTfName="map"
        AprilTagPose="{DetectedDropoffPose}"/>
      <ForkActionNode
        name="RaiseForkAboveDropoffPose"
        DropoffPose="{DetectedDropoffPose}"/>
      <MoveActionNode
        name="ApproachDropoffPose"
        TargetPose="{DetectedDropoffPose}"
        TargetPoseOffset="-0.65"/>
      <ForkActionNode
        name="Dropoff"
        TargetHeightOffset="-0.8"/>
      <MoveActionNode
        name="BackAway"
        TargetPose="{DetectedDropoffPose}"
        TargetPoseOffset="1.6"/>
      <SleepNode
        name="SleepBeforeHeightDescend"
        SleepTimeInSeconds="1.0"/>
      <ForkActionNode
        name="LowerForkCloseToGround"
        TargetHeight="0.1"/>
    </Sequence>
  </BehaviorTree>
</root>
